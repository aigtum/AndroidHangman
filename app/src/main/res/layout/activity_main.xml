<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="368dp"
            android:layout_height="527dp" tools:layout_editor_absoluteY="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        <TextView
                android:text="ðŸ’€ Android Hangman ðŸ’€"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="5dp"
                tools:layout_editor_absoluteX="20dp" android:id="@+id/textView2" android:textSize="24sp"
                android:fontFamily="@font/advent_pro_medium" android:typeface="sans" android:textAlignment="center"
                android:lineSpacingExtra="8sp"/>
        <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                tools:layout_editor_absoluteY="63dp" tools:layout_editor_absoluteX="8dp" android:visibility="visible"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/message" android:textAlignment="center"
                android:textStyle="italic"/>
        <TextView
                android:text="Score"
                android:layout_width="match_parent"
                android:layout_height="24dp" android:id="@+id/score" android:fontFamily="@font/advent_pro_medium"/>
        <TextView
                android:text="Your word"
                android:layout_width="match_parent"
                android:layout_height="59dp" tools:layout_editor_absoluteY="92dp"
                android:id="@+id/word" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.512" app:layout_constraintEnd_toEndOf="parent"
                android:textSize="18sp" android:textAlignment="center" android:fontFamily="@font/advent_pro_medium"/>
        <TextView
                android:text="Tries"
                android:layout_width="match_parent"
                android:layout_height="20dp" android:id="@+id/tries" android:fontFamily="@font/advent_pro_medium"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textNoSuggestions"
                android:ems="10"
                tools:layout_editor_absoluteY="199dp" tools:layout_editor_absoluteX="19dp" android:id="@+id/guess"
                android:hint="Your guess" android:fontFamily="@font/advent_pro_medium"/>
        <Button
                android:text="Enter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="262dp"
                tools:layout_editor_absoluteX="278dp" android:id="@+id/enterBtn"
                style="@style/Widget.AppCompat.Button.Colored" android:fontFamily="@font/advent_pro_medium"/>
        <Button
                android:text="New Word"
                android:layout_width="match_parent"
                android:layout_height="63dp" tools:layout_editor_absoluteY="430dp"
                tools:layout_editor_absoluteX="8dp" android:id="@+id/newGameButton"
                style="@android:style/Widget.Material.Light.Button" android:fontFamily="@font/advent_pro_medium"/>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>